#!/bin/sh

cpu_temp=$(sensors | awk '/Tdie/ {print "ðŸŒ¡" $2}')
cpu_avg=$(top -b | head -n 3 | grep -o "Cpu.*us" | grep -o "[0-9]\+\.[0-9]\+" | awk '{print "ðŸ”´" $1 "%"}')
cpu_mhz=$(cat /sys/devices/system/cpu/cpu*/cpufreq/scaling_cur_freq | sort -nr | head -n 1 -c 4 | awk '{print "âš¡" $1}')

